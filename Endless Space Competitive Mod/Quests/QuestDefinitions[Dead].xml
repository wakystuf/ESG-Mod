    <QuestDefinition Name="QuestPirateDefeat" Category="VictoryCondition" SubCategory="Elimination">

        <!--============ TAGS ============-->
        <Tags>BeginTurn,Hidden</Tags>

        <QuestContextMulti ParticipantsVarName="$AllEmpires"/>

        <RepetitionRules  NumberOfOccurrencesPerGame="1"
                          NumberOfOccurrencesPerEmpire="0"
                          NumberOfConcurrentInstances="0"/>

        <Vars>
            <Var VarName="$AllEmpires">
                <From Source="$MajorEmpires"/>
            </Var>
            <Var VarName="$Pirates">
                <From Source="$PirateEmpire"/>
            </Var>
            <Var VarName="$ZeroSystem" IntValue="0"/>
            <Var VarName="$OneSystem" IntValue="1"/>
            <Var VarName="$ThreeTurns" IntValue="3"/>
        </Vars>

        <!--============ STEPS ============-->
        <Steps>
            <!--============ STEP 1 ============-->
            <Step Name="Step1">
                <ObjectiveSet>
                    <Objective Name="Step1_Objective1">
                        <Sequence>
                            <!-- Wait until at least one lair has spawned. -->
                            <Decorator_PostEndTurn>
                                <Condition_HasSystems>
                                    <Input_Empires VarName="$Pirates"/>
                                    <Input_MinimumAmount VarName="$OneSystem"/>
                                </Condition_HasSystems>
                            </Decorator_PostEndTurn>

                            <!-- Wait three turns in a row with 0 lairs. -->
                            <Parallel CompletionPolicy="First" ResetPolicy="OnFail">
                                <Sequence>
                                    <!-- Restart (fail) the sequence if pirate has systems. -->
                                    <Decorator_PostEndTurn>
                                        <Condition_HasSystems>
                                            <Input_Empires VarName="$Pirates"/>
                                            <Input_MinimumAmount VarName="$OneSystem"/>
                                        </Condition_HasSystems>
                                    </Decorator_PostEndTurn>
                                    <Action_Fail/>
                                </Sequence>
                                <Sequence>
                                    <!-- Wait 3 turns, but using BeginTurn to cover case where a lair is spawned at the end of the last turn -->
                                    <Loop Count="3">
                                        <Decorator_BeginTurn>
                                            <Condition_HasSystems>
                                                <Input_Empires VarName="$Pirates"/>
                                                <Input_MaximumAmount VarName="$ZeroSystem"/>
                                            </Condition_HasSystems>
                                        </Decorator_BeginTurn>
                                    </Loop>
                                </Sequence>
                            </Parallel>

                            <!-- Once the sequence is a success, eliminate the pirates -->
