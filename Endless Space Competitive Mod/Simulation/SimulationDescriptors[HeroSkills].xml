  <SimulationDescriptor Name="HeroSkillSenator75_Industry_PerAnomaly_4" Type="HeroSkillSenator" IsSerializable="false">
    <Property Name="DictatorshipBonus" BaseValue="-1" MinValue="Negative"/>
