    <SimulationDescriptor Name="ClassLaw" Type="Class">
        <Property Name="ActiveLawsCount" BaseValue="1"/>
        <Property Name="LocalDiplomacyCostReduction" BaseValue="-0.1" MinValue="-0.5"/>
        <Property Name="LocalRecipeCostMultiplier"              BaseValue="-0.1" MinValue="-0.3" MaxValue="0"/>
        <Property Name="LocalFIDSBonusDecaying"              BaseValue="0.25" MinValue="0" MaxValue="0.25"/>
        <Property Name="LocalFIDSBonusDecaying_Republic"              BaseValue="0.35" MinValue="0" MaxValue="0.35"/>
        <Property Name="PopBoostingCostReductionActivationTime" BaseValue="-0.1" MinValue="-0.5"/>
        <Property Name="PopBoostingCostReductionActivationTimeRepublic" BaseValue="-0.15" MinValue="-0.6"/>
        <Property Name="ReductionCostReduction" BaseValue="-0.1" MinValue="-0.5"/>
        <Property Name="ReductionCostReductionRepublic" BaseValue="-0.15" MinValue="-0.6"/>
        <Property Name="GameSpeedTimeMultiplier" BaseValue="1" />

        
        <Property Name="NetLawActivationTime" BaseValue="1"/>
        <Property Name="LawActivationTimeStock" BaseValue="0" IsSealed="true"/>
        <Property Name="MaximumLawActivationTimeStock" BaseValue="999"/>
        <Property Name="MinimumLawActivationTimeStock" BaseValue="0"/>
        <Property Name="LawActivationTimeCount" BaseValue="0"/>
        <Property Name="CancelPriority"    BaseValue="0" />

        <Property Name="EmpireMoneyUpkeep"          BaseValue="0" />
        <Property Name="LawEmpireMoneyUpkeep"       BaseValue="0" />
        <Property Name="LawEmpireEmpirePointUpkeep" BaseValue="0" />
        <Property Name="UpkeepMultiplier"           BaseValue="1" MinValue="0" MaxValue="1"/>

        <Property Name="CancelDurationReached"      BaseValue="0" MinValue="0" MaxValue="1" IsSealed="true" IsSerializable="true"/>
        <Property Name="PrerequisitesChecked"       BaseValue="1" MinValue="0" MaxValue="1" IsSealed="true" IsSerializable="true"/>
        
        <Property Name="ElapsedTurns"               BaseValue="0" IsSealed="true"/>
        <Property Name="PeaceCount"                         BaseValue="0"       />
        <Property Name="AllianceCount"                      BaseValue="0"      />
        <Property Name="WarCount"                           BaseValue="0"/>
        <Property Name="MajorWarCount"                           BaseValue="0"/>

        <Modifier TargetProperty="UpkeepMultiplier"                 Operation="Subtraction" Value="$(PrerequisitesChecked)" TooltipHidden="true"/>

        <Modifier TargetProperty="LocalDiplomacyCostReduction" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>
        <Modifier TargetProperty="LocalRecipeCostMultiplier" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>
        <Modifier TargetProperty="LocalFIDSBonusDecaying" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>
        <Modifier TargetProperty="LocalFIDSBonusDecaying_Republic" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>
        <Modifier TargetProperty="PopBoostingCostReductionActivationTime" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>
        <Modifier TargetProperty="PopBoostingCostReductionActivationTimeRepublic" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>
        <Modifier TargetProperty="ReductionCostReduction" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>
        <Modifier TargetProperty="ReductionCostReductionRepublic" Operation="Multiplication" Value="$(GameSpeedTimeMultiplier)" TooltipHidden="true"/>

    </SimulationDescriptor>

